{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build & debug file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "-o",
          "${fileBasenameNoExtension}.out",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build & run file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-o",
          "${fileBasenameNoExtension}.out",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "build & run crypto",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}","aes.cpp",
          "-lssl","-lcrypto"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }